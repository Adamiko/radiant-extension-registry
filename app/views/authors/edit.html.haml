- @title = "Edit Your Profile"

- form_for @author, :html => {:method => :put} do |f|
  %fieldset.half
    %legend 
      %span Personal info
    %p
      %label{"for"=>"author_first_name"}
        First name
      = f.text_field :first_name, :class => "textbox"
    %p
      %label{"for"=>"author_last_name"}
        Last name
      = f.text_field :last_name, :class => "textbox"
    %p
      %label{"for"=>"author_website"}
        Website URL
      = f.text_field :website, :class => "textbox"
    %p
      %label{"for"=>"author_email"}
        Email
      = f.text_field :email, :class => "textbox"
    %p
      %label{"for"=>"author_notes"}
        Personal notes
        %span.hint
          textile allowed
      ~ f.text_area :notes, :size => "38x4"
  %fieldset.half
    %legend
      %span Account info
    %p
      %label{"for"=>"author_login"}
        Login
      = f.text_field :login, :class => "textbox"
    %p
      %label{"for"=>"author_password"}
        Password
      = f.password_field :password, :class => "textbox"
    %p
      %label{"for"=>"author_password_confirmation"}
        Confirm Password
      = f.password_field :password_confirmation, :class => "textbox"
  .buttons
    = submit_tag "Save Profile", :class => "button"