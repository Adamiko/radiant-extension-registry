- @title = "Extension Authors"

= will_paginate @authors

%table.index#authors{:border=>0, :cellpadding=>0, :cellspacing=>0}
  %tbody
    - @authors.each do |author|
      %tr[author]
        %td.avatar
          = image_tag gravatar_url(author.email), :width=>80, :height=>80, :alt=>""
        %td.info
          .name= link_to h(author.name), author_path(author)
          .extensions_count
            = "#{author.extensions_count} extensions"

= will_paginate @authors