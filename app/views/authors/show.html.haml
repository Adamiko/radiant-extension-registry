%h2
  Author:
  = h(@author.full_name)
  
%table.attributes
  %tr
    %th.label Email
    %td.value=mail_to(@author.email, nil, :encode => :javascript)
  %tr
    %th.label Website
    %td.value= link_to(@author.website, @author.website) if @author.website
  %tr
    %th.label Notes
    %td.value= textilize(@author.notes)
  %tr
    %th.label Extensions
    %td.value
      %ul
        - @author.extensions.each do |ext|
          %li[ext]= link_to ext.name, ext